{
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "args": [
        "--no-color"
    ],
    "tasks": [
		{
			"taskName": "lint",
			"isBuildCommand": true,
			"showOutput": "always"
		},
		{
			"taskName": "build-app",
			"isBuildCommand": true,
			"showOutput": "always"
		},
		{
			"taskName": "bundle",
			"isBuildCommand": true,
			"showOutput": "always"
		},
		{
			"taskName": "watch",
			"isBuildCommand": true,
			"showOutput": "always"
		}
	]
}